{
  "private": true,
  "name": "@oasisprotocol/dapp-staker-backend",
  "version": "0.0.0",
  "description": "Backend contracts for Oasis Sapphire Staking dApp",
  "keywords": [
    "oasis",
    "sapphire",
    "staking"
  ],
  "scripts": {
    "build": "pnpm run clean && hardhat compile",
    "clean": "hardhat clean && rm -rf cache",
    "test": "echo 'Warning: No test/s specified'",
    "test:local": "hardhat --network sapphire_local test",
    "test:testnet": "HARDHAT_NETWORK=sapphire_testnet HARDHAT_CONTRACT_ADDRESS=0x16a8B86D12F317d7c90d808775193d64BB5481Bc hardhat test",
    "typecheck": "pnpm build && pnpm test && pnpm tsc --noEmit",
    "deploy": "hardhat --network sapphire_testnet run scripts/deploy.ts"
  },
  "license": "See License in ../LICENSE",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "1.0.10",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@oasisprotocol/client": "^1.1.0",
    "@oasisprotocol/sapphire-contracts": "0.2.6",
    "@oasisprotocol/sapphire-paratime": "^1.3.2",
    "@openzeppelin/contracts": "4.9.5",
    "@types/node": "20.10.4",
    "hardhat": "2.19.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "ethers": "6.10.0"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  }
}
