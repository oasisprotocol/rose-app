{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.strictest.json",
    "compilerOptions": {
        "isolatedModules": false,
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declarationMap": true,
        "composite": true
    },
    "ts-node": {
        "esm": true, // «———— enabling ESM for ts-node
    },
}